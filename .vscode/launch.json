    "version": "0.2.0",
    "configurations": [
        {
        "type": "node",
        "request": "launch",
        "name": "Debug: Run TS actual",
        "runtimeExecutable": "npx",
        "runtimeArgs": ["tsx", "--inspect-wait", "--no-cache"],
    
