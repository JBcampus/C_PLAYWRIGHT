{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug: Run TS actual",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["tsx", "--inspect-wait", "--no-cache"
],
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "smartStep": true,
        }
    ]
}
